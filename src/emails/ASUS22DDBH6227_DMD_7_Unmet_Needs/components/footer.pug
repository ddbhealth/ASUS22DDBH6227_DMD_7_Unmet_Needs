table(width="600" align="center" class="mobile-table" bgcolor="#ffffff")&attributes(tableAtt)
  tr
    +hSpacer(35)
    td(align="left" valign="top")
      table(width="100%" align="center" class="mobile-table mobile-hide" )&attributes(tableAtt)
        tr 
            td(align="left" valign="top")
                a(href="https://www.novartis.us/about-us" target="_blank")
                    img(src=img_path+"logo.png" alt="logo" width="177")
        +vSpacer(30)
    td(align="center" valign="top")
      table(width="100%" align="center" class="mobile-table mobile-show" )&attributes(tableAtt)
        tr 
            td(align="center" valign="top")
                a(href="https://www.novartis.us/about-us" target="_blank")
                    img(src=img_path+"logo.png" alt="logo" width="177")
        +vSpacer(30)
table(width="600" align="center" class="mobile-table" bgcolor="#ffffff")&attributes(tableAtt)
  tr
    +hSpacer(35)
    td(align="left" valign="top")
        table(width="100%" align="center" class="mobile-table" )&attributes(tableAtt)
            tr 
                td(align="left" valign="top").mobile-hide
                    table(width="100%" align="center" class="mobile-table" )&attributes(tableAtt)
                        tr 
                            td(align="left" valign="top")
                                font(class="f14 ").
                                    !{footer.text1}
                            +hSpacer(20)
                            td(align="left" valign="top")
                                font(class="f14 ").
                                    !{footer.text2}
                            +hSpacer(15)
                            td(align="left" valign="top")
                                font(class="f14 ").
                                    !{footer.text3}
                            +hSpacer(15)
                            td(align="left" valign="top")
                                font(class="f14 ").
                                    !{footer.text4}
                            +hSpacer(30)
            tr 
                td(align="center" valign="top")
                    table(width="100%" align="center" class="mobile-table mobile-show" )&attributes(tableAtt)
                        tr 
                            td(align="center" valign="top")
                                font(class="f14 ").
                                    !{footer.text1}
                        +vSpacer(20)
                        tr 
                            td(align="center" valign="top")
                                table(width="100%" align="center" class="mobile-table mobile-show" )&attributes(tableAtt)
                                    tr 
                                        td(align="left" valign="top")
                                            font(class="f14 ").
                                                !{footer.text2}
                                        +hSpacer(15)
                                        td(align="left" valign="top")
                                            font(class="f14 ").
                                                !{footer.text3}
                                        +hSpacer(15)
                                        td(align="right" valign="top")
                                            font(class="f14 ").
                                                !{footer.text4}
            +vSpacer(25)
    +hSpacer(30)
